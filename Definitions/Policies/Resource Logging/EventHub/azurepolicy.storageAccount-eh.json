{
  "name": "sa-diagnostic-settings-eh-policyDef",
  "properties": {
    "displayName": "Apply diagnostic settings for Storage Account - Event Hub",
    "description": "This policy automatically deploys and enable diagnostic settings to Event Hub",
    "metadata": {
      "category": "Monitoring"
    },
    "mode": "all",
    "parameters": {
      "diagnosticsSettingNameToUse": {
        "type": "string",
        "metadata": {
          "displayName": "Setting name",
          "description": "Name of the policy for the diagnostics settings."
        },
        "defaultValue": "setByPolicyEvtHub"
      },
      "resourceLocation": {
        "type": "string",
        "metadata": {
          "displayName": "Resource Location",
          "description": "Resource Location must be the same as the Event Hub",
          "strongType": "location"
        }
      },
      "eventHubName": {
        "type": "string",
        "metadata": {
          "displayName": "Event Hub Name",
          "description": "Specify the name of the Event Hub"
        },
        "defaultValue": "Data"
      },
      "eventHubAuthorizationRuleId": {
        "type": "string",
        "metadata": {
          "displayName": "Event Hub Authorization Rule Id",
          "description": "Specify Event Hub Authorization Rule Id"
        }
      },
      "enableLogs": {
        "type": "boolean",
        "metadata": {
          "displayName": "Enable Logs",
          "description": "Enable (true) or disable logs"
        },
        "defaultValue": true
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "location",
            "equals": "[parameters('resourceLocation')]"
          },
          {
            "field": "type",
            "in": [
              "Microsoft.Storage/storageAccounts/blobServices",
              "Microsoft.Storage/storageAccounts/fileServices",
              "Microsoft.Storage/storageAccounts/tableServices",
              "Microsoft.Storage/storageAccounts/queueServices"
            ]
          }
        ]
      },
      "then": {
        "effect": "deployIfNotExists",
        "details": {
          "type": "Microsoft.Insights/diagnosticSettings",
          "roleDefinitionIds": [
            "/providers/Microsoft.Authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c"
          ],
          "existenceCondition": {
            "allOf": [
              {
                "count": {
                  "field": "Microsoft.Insights/diagnosticSettings/logs[*]",
                  "where": {
                    "allOf": [
                      {
                        "field": "Microsoft.Insights/diagnosticSettings/logs[*].category",
                        "in": [
                          "StorageRead",
                          "StorageWrite",
                          "StorageDelete"
                        ]
                      },
                      {
                        "field": "Microsoft.Insights/diagnosticSettings/logs[*].enabled",
                        "equals": "[parameters('enableLogs')]"
                      }
                    ]
                  }
                },
                "greaterOrEquals": 3
              },
              {
                "field": "Microsoft.Insights/diagnosticSettings/eventHubAuthorizationRuleId",
                "matchInsensitively": "[parameters('eventHubAuthorizationRuleId')]"
              },
              {
                "field": "Microsoft.Insights/diagnosticSettings/eventHubName",
                "matchInsensitively": "[parameters('eventHubName')]"
              }
            ]
          },
          "deployment": {
            "properties": {
              "mode": "incremental",
              "template": {
                "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                "contentVersion": "1.0.0.0",
                "parameters": {
                  "diagnosticsSettingNameToUse": {
                    "type": "string"
                  },
                  "resourceType": {
                    "type": "string"
                  },
                  "resourceName": {
                    "type": "string"
                  },
                  "eventHubName": {
                    "type": "string"
                  },
                  "eventHubAuthorizationRuleId": {
                    "type": "string"
                  },
                  "location": {
                    "type": "string"
                  },
                  "enableLogs": {
                    "type": "boolean"
                  }
                },
                "variables": {},
                "resources": [
                  {
                    "type": "[concat(parameters('resourceType'), '/providers/diagnosticSettings')]",
                    "apiVersion": "2021-05-01-preview",
                    "name": "[concat(parameters('resourceName'), '/Microsoft.Insights/', parameters('diagnosticsSettingNameToUse'))]",
                    "location": "[parameters('location')]",
                    "dependsOn": [],
                    "properties": {
                      "eventHubName": "[parameters('eventHubName')]",
                      "eventHubAuthorizationRuleId": "[parameters('eventHubAuthorizationRuleId')]",
                      "metrics": [],
                      "logs": [
                        {
                          "category": "StorageRead",
                          "enabled": "[parameters('enableLogs')]"
                        },
                        {
                          "category": "StorageWrite",
                          "enabled": "[parameters('enableLogs')]"
                        },
                        {
                          "category": "StorageDelete",
                          "enabled": "[parameters('enableLogs')]"
                        }
                      ]
                    }
                  }
                ]
              },
              "parameters": {
                "diagnosticsSettingNameToUse": {
                  "value": "[parameters('diagnosticsSettingNameToUse')]"
                },
                "resourceType": {
                  "value": "[field('type')]"
                },
                "eventHubName": {
                  "value": "[parameters('eventHubName')]"
                },
                "eventHubAuthorizationRuleId": {
                  "value": "[parameters('eventHubAuthorizationRuleId')]"
                },
                "location": {
                  "value": "[field('location')]"
                },
                "resourceName": {
                  "value": "[field('fullName')]"
                },
                "enableLogs": {
                  "value": "[parameters('enableLogs')]"
                }
              }
            }
          }
        }
      }
    }
  }
}