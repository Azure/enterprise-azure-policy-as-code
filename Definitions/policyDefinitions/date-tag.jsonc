{
    "$schema": "https://raw.githubusercontent.com/Azure/enterprise-azure-policy-as-code/main/Schemas/policy-definition-schema.json",
    "name": "AddDateCreatedTag-Definition-20240819",
    "properties": {
        "displayName": "Deploy 'deployments time' tag",
        "description": "Policy to deploy 'deployment time' tag",
        "metadata": {
            "version": "1.0.0",
            "category": "Tags"
        },
        "mode": "Indexed",
        "parameters": {
            "tagName": {
                "type": "String",
                "defaultValue": "DeploymentTime",
                "metadata": {
                    "displayName": "Tag Name",
                    "description": "Name of the tag, such as 'Date'"
                }
            },
            "effect": {
                "type": "String",
                "metadata": {
                    "displayName": "Effect",
                    "description": "Modify, Deny, Audit or Disabled the execution of the Policy"
                },
                "allowedValues": [
                    "Modify",
                    "Deny",
                    "Audit",
                    "Disabled"
                ],
                "defaultValue": "Audit"
            }
        },
        "policyRule": {
            "if": {
                "field": "[concat('tags[', parameters('tagName'), ']')]",
                "exists": "false"
            },
            "then": {
                "effect": "[parameters('effect')]",
                "details": {
                    "roleDefinitionIds": [
                        "/providers/microsoft.authorization/roleDefinitions/4a9ae827-6dc8-4573-8ac7-8239d42aa03f"
                    ],
                    "operations": [
                        {
                            "operation": "add",
                            "field": "[concat('tags[', parameters('tagName'), ']')]",
                            "value": "[concat(substring(utcNow(),5,2), '/', substring(utcNow(),8,2), '/', substring(utcNow(),0,4))]"
                            //"value": "1900-01-01"  //This was used for initial remediation
                        }
                    ]
                }
            }
        }
    }
}