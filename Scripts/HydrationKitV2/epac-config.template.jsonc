{
    // EPAC Hydration Configuration Template
    // Copy this file and customize for your environment
    // Required: Your organization's root Management Group ID
    "tenantIntermediateRoot": "contoso",
    // Optional: Friendly name for your main EPAC environment (default: "tenant")
    "pacSelector": "tenant",
    // Optional: Azure region for Managed Identities (default: "eastus")
    "managedIdentityLocation": "eastus",
    // Optional: Import existing policy assignments (default: false)
    "importExistingPolicies": true,
    // Optional: Create epac-dev environment for testing (default: false)
    // When true, creates a separate Management Group and pacEnvironment for safe testing
    "createDevEnvironment": false,
    // Optional: CI/CD platform - "GitHub", "AzureDevOps", or "None" (default: "None")
    // Set to "None" to skip pipeline creation
    "pipelinePlatform": "None",
    // Optional: Pipeline template type - "Simple" or "StarterKit" (default: "Simple")
    // Only applies when pipelinePlatform is "GitHub" or "AzureDevOps"
    // Simple: Basic single-file pipeline for quick start
    // StarterKit: Full EPAC pipeline templates with advanced features (recommended for production)
    "pipelineType": "Simple",
    // Optional: Branching flow for StarterKit pipelines - "GitHub" or "Release" (default: "GitHub")
    // Only applies when pipelineType is "StarterKit"
    // GitHub: GitHub Flow (main + feature branches, simpler workflow)
    // Release: Release Flow (main + release + feature branches, more controlled releases)
    "branchingFlow": "GitHub",
    // Optional: Use PowerShell module instead of local scripts (default: false)
    "useModuleNotScript": false,
    // Optional: Paths (defaults shown)
    "definitionsRootFolder": "./Definitions",
    "outputFolder": "./Output"
}