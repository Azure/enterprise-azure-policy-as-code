{
    "$schema": "https://raw.githubusercontent.com/Azure/enterprise-azure-policy-as-code/main/Schemas/policy-definition-schema.json",
    "name": "test-pd-002-deny-public-ip",
    "properties": {
        "displayName": "Test PD-002: Deny Public IP Addresses",
        "description": "This policy denies the creation of public IP addresses. Test policy for EPAC regression testing.",
        "mode": "All",
        "metadata": {
            "category": "Network",
            "version": "1.0.0"
        },
        "parameters": {
            "effect": {
                "type": "String",
                "metadata": {
                    "displayName": "Effect",
                    "description": "The effect of the policy"
                },
                "allowedValues": [
                    "Deny",
                    "Audit",
                    "Disabled"
                ],
                "defaultValue": "Deny"
            }
        },
        "policyRule": {
            "if": {
                "field": "type",
                "equals": "Microsoft.Network/publicIPAddresses"
            },
            "then": {
                "effect": "[parameters('effect')]"
            }
        }
    }
}